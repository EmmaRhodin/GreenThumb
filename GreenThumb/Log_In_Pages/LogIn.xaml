<Window x:Class="GreenThumb.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GreenThumb"
        mc:Ignorable="d"
        Title="LogIn" 
        Height="600" 
        Width="500" 
        Background="ForestGreen"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Button
                x:Name="btnGoToRegister"
                Visibility="Visible"
                Content="Register"
                FontSize="28"
                Margin="0,0,0,40"
                Padding="25,5,25,5"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Click="btnGoToRegister_Click"
                />
        <Button
                x:Name="btnGoToLogIn"
                Visibility="Hidden"
                Content="Back"
                FontSize="28"
                Margin="0,0,0,40"
                Padding="46,5,46,5"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Click="btnGoToLogIn_Click"
                />

        <!-- Navigation frame for pages -->
        <Frame x:Name="LogInPageNavigation" Margin="10,10,10,100" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
