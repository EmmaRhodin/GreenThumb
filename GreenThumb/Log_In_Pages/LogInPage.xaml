<Page x:Class="GreenThumb.LogInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GreenThumb"
      mc:Ignorable="d" 
      d:DesignHeight="490" d:DesignWidth="480"
      Title="LogInPage">

    <Grid>
        <!-- Rectangle functions as background colour -->
        <Rectangle
            Name="LogInPageBackground">
            <Rectangle.Fill>
                <SolidColorBrush Color="White"/>
            </Rectangle.Fill>
        </Rectangle>
        
        <!-- Quick Log In, To be deleted -->
        <TextBlock 
            Text="Blev inte färdig med denna delen :("
            Margin="100,200"
            HorizontalAlignment="Center"
            />
        <Button
            Name="btnQuickLogIn"
            Content="Quick LogIn!"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Click="btnQuickLogIn_Click"
            />
    </Grid>
</Page>
